<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.vanshavali">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.google.android.gms.permission.AD_ID"/>
    <queries>
        <package android:name="com.whatsapp" />
        <package android:name="com.whatsapp.w4b" />
    </queries>

    <application
        android:name=".application.RoomApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_latest"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_latest_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Vanshavali"
        android:screenOrientation="portrait">
        <activity
            android:name=".splash.view.SplashActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"
            android:theme="@style/catDetails">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".home.view.LandingActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"/>

        <activity android:name=".listdetail.view.ListActivityDetails"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"/>
        <activity
            android:name=".home.view.CatDetailsActivity"
            android:theme="@style/catDetails"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"/>
        <activity
            android:name=".landing.view.ListActivity"
            android:theme="@style/DemoTheme"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"/>
        <activity
            android:name=".aggrement.view.UserAgreement"
            android:theme="@style/catDetails"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"/>
    </application>

</manifest>